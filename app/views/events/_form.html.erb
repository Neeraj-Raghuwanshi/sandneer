<div class="row">
  <div class="col-md-12">
    <div class="card card-default">
      <div class="card-header">Event Form</div>
      <div class="card-body">
        <%= form_for @event do |f| %>
          <div class="form-group">
            <label>Name*</label>
            <%= f.select :key_event_id ,options_for_select(KeyEvent.pluck(:name,:id),selected: f.object.key_event_id),{prompt: 'Select Key Event'}, class: "chosen-select form-control" %>
          </div>
          <%= form_group_for f, :description, label: false  do %>
            <div class="form-group">
              <label>Description*</label>
              <%= f.text_area :description ,class: "form-control", placeholder: "Please enter description"%>
            </div>
          <% end %>
          <%= form_group_for f, :start_date, label: false  do %>
            <div class="form-group">
              <label>Start Date*</label>
              <%= f.date_field :start_date,class: "form-control" %>
            </div>
          <% end %>
          <%= form_group_for f, :end_date, label: false  do %>
            <div class="form-group">
              <label>End Date*</label>
              <%= f.date_field :end_date,class: "form-control" %>
            </div>
          <% end %>
          <%= f.submit :submit, class: "btn btn-sm btn-primary"%>
          <%= link_to 'Cancel', events_path,class: "btn btn-sm btn-warning" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
