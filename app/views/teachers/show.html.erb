<link rel="stylesheet" href="/assets/theme_css/sweetalert/sweetalert.css">
<div class="wrapper">
  <%= render 'layouts/header'%>
  <%= render 'layouts/left_sidebar'%>
  <%= render 'layouts/right_sidebar'%>
  <section class="section-container">
    <div class="content-wrapper">
      <div class="content-heading">
        <div>
          <%= @teacher.name %>
          <ol class="breadcrumb breadcrumb px-0 pb-0">
            <li class="breadcrumb-item">
              <a href="/levels"><%= render_breadcrumbs :separator => ' / ' %></a>
            </li>
            <li class="breadcrumb-item active"><%= @teacher.name %></li>
          </ol>
        </div>
        <div class="ml-auto">
          <button class="btn btn-labeled btn-danger mb-2 swal-demo9" type="button">
          <%= hidden_field_tag :d_teacher, @teacher.id %>
          <span class="btn-label"><i class="fa fa-trash-alt" ></i></span>Delete
          </button>
          <%= link_to(edit_teacher_path(@teacher.id),class: 'btn btn-labeled btn-warning mb-2') do %>
          <span class="btn-label"><i class="fa fa-pencil-alt"></i></span>Edit
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-4">
          <div class="card card-default">
            <div class="card-body bb text-center">
              <div class="py-4">
                <img class="img-fluid rounded-circle img-thumbnail thumb96" src="/assets/user/02.jpeg" alt="Contact">
              </div>
            </div>
              <%= render 'teacher_details' %>
            <div class="card-footer">
              <% diff = (Time.now.to_i - @teacher.updated_at.to_i) %>
              <div class="text-sm text-muted">Last updated at <%= distance_of_time_in_words(diff).split("and")[0].chomp(', ') %>
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-8">
          <div id="accordion">
            <div class="card card-default mb-1">
              <div class="card-header" id="headingOne">
                <div class="d-flex justify-content-end">
                  <div class="btn-group">
                    <button class="btn btn-link" data-toggle="dropdown">
                    <em class="fa fa-ellipsis-v fa-lg text-muted"></em>
                    </button>
                    <div class="dropdown-menu dropdown-menu-right-forced animated fadeInLeft" role="menu">
                      <a class="dropdown-item" href="#">
                      <span>Send by message</span>
                      </a>
                      <a class="dropdown-item" href="#">
                      <span>Share contact</span>
                      </a>
                      <a class="dropdown-item" data-toggle="modal" data-target="#emergencyModal1" href="#">
                      <span>View Emergency Details</span>
                      </a>
                      <a class="dropdown-item" href="#">
                      <span class="text-warning">Delete contact</span>
                      </a>
                    </div>
                  </div>
                </div>
                <h4 class="mb-0">
                  <a class="text-inherit" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne" href="">Employment Details</a>
                </h4>
              </div>
              <div class="collapse show" id="collapseOne" aria-labelledby="headingOne" data-parent="#accordion">
                <div class="card-body border-top">
                  <%= render 'employment_details.html.erb'%>
                </div>
              </div>
            </div>
          </div>
          <div class="card card-default mb-1">
            <div class="card-header" id="headingTwo">
              <h4 class="mb-0">
                <a class="text-inherit collapsed" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo" href="">Registration Details</a>
              </h4>
            </div>
            <div class="collapse show" id="collapseTwo" aria-labelledby="headingTwo" data-parent="#accordion">
              <div class="card-body border-top">
                <%= render 'registration_details'%>
              </div>
            </div>
          </div>
          <div class="card card-default mb-1">
            <div class="card-header" id="headingTwo">
              <h4 class="mb-0">
                <a class="text-inherit collapsed" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo" href="">Medical Details</a>
              </h4>
            </div>
            <div class="collapse show" id="collapseTwo" aria-labelledby="headingTwo" data-parent="#accordion">
              <div class="card-body border-top">
                <%= render 'medical_details'%>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <%= render '/layouts/footer'%>
</div>
<script src="/assets/theme_js/sweetalert/sweetalert.min.js"></script>
<script src="/assets/theme_js/js/app.js"></script>

<!-- Model popup -->
<div class="modal fade" id="emergencyModal1" tabindex="-1" role="dialog" aria-labelledby="emergencyModalLabel" aria-hidden="true">
  <%= render 'model_popup' %>
</div>
