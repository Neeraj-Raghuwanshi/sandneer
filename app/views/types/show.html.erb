<link rel="stylesheet" href="/assets/theme_css/datatables.net-bs4/dataTables.bootstrap4.css">
<link rel="stylesheet" href="/assets/theme_css/datatables.net-keytable-bs/keyTable.bootstrap.css">
<link rel="stylesheet" href="/assets/theme_css/datatables.net-responsive-bs/responsive.bootstrap.css">
<link rel="stylesheet" href="/assets/theme_css/sweetalert/sweetalert.css">
<div class="wrapper">
  <%= render 'layouts/header'%>
  <%= render 'layouts/left_sidebar'%>
  <%= render 'layouts/right_sidebar'%>
  <section class="section-container">
    <div class="content-wrapper">
      <div class="content-heading">
        <div>
          <%= @type.name %>
          <ol class="breadcrumb breadcrumb px-0 pb-0">
            <li class="breadcrumb-item">
              <%= render_breadcrumbs :separator => ' / '%>
            </li>
            <li class="breadcrumb-item active"><%=@type.name%></li>
          </ol>
        </div>
        <div class="ml-auto">
          <button class="btn btn-labeled btn-danger mb-2 swal-demo8" type="button">
            <%= hidden_field_tag :d_type, @type.id %>
            <span class="btn-label"><i class="fa fa-trash-alt" ></i></span>Delete
          </button>
          <%= link_to(edit_type_path(@type.id),class: 'btn btn-labeled btn-warning mb-2') do %>
            <span class="btn-label"><i class="fa fa-pencil-alt"></i></span>Edit
          <% end %>
        </div>
      </div>
      <!-- </div> -->
      <div class="row">
        <div class="col-lg-4">
          <div class="card card-default">
            <div class="card-body">
              <p>Metrics</p>
              <div class="row text-center">
                <div class="col-3 col-lg-6 col-xl-3">
                  <div class="inline my-2"> <%= pie_chart @type.students.group(:gender).count,width: "70px", height: "70px",legend: false %></div>
                  <p class="mt-3">Gender</p>
                </div>
                <div class="col-3 col-lg-6 col-xl-3">
                  <div class="inline my-2"> <%= pie_chart @type.students.group(:ethnicity_group).count,width: "70px", height: "70px",legend: false,id: "ethnicity_chart" %></div>
                  <p class="mt-3">Ethinicity</p>
                </div>
              </div>
            </div>
            <table class="table bb">
              <tbody>
                <tr>
                  <td>
                    <strong>Descripition</strong>
                  </td>
                  <td><%= @type.description %></td>
                </tr>
                <tr>
                  <td>
                    <strong>Fee</strong>
                  </td>
                  <td><%= @type.fee %></td>
                </tr>
                <tr>
                  <td>
                    <strong>Payment Terms</strong>
                  </td>
                  <td><%= @type.payment_terms %></td>
                </tr>
                <tr>
                  <td>
                    <strong>Created at</strong>
                  </td>
                  <td><%= @type.created_at.strftime('%d %B,%Y') %></td>
                </tr>
              </tbody>
            </table>
            <div class="card-footer">
              <% diff = (Time.now.to_i - @type.updated_at.to_i) %>
              <div class="text-sm text-muted">Last updated at <%= distance_of_time_in_words(diff).split("and")[0].chomp(', ') %></div>
            </div>
          </div>
          <!-- end Aside card-->
        </div>
        <div class="col-lg-8">
          <div class="mb-3 d-flex">
            <div>
              <span data-toggle="modal" data-target="#myModal">
              <button class="btn btn-sm btn-secondary" title="Add New Student" type="button" data-toggle="tooltip">
              <em class="fa fa-user-plus"></em>
              </button>
              </span>
              <button class="btn btn-sm btn-secondary" title="Print Students List" type="button" data-toggle="tooltip">
              <em class="fa fa-print"></em>
              </button>
              <span data-toggle="modal" data-target="#emailModal">
              <button class="btn btn-sm btn-secondary" title="Send email" type="button" data-toggle="tooltip">
              <em class="fa fa-envelope"></em>
              </button>
              </span>
            </div>
            <div class="ml-auto">
              <p class="mb-0 mt-1"><%= @type.students.count%></p>
            </div>
          </div>
          <div class="card b">
            <div class="card-body">
              <table class="table w-100" id="datatable12" >
                <thead>
                  <tr>
                    <th>Student Name</th>
                    <th>Student Type</th>
                    <th>Status</th>
                    <th>fee</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% @type.students.each do |student| %>
                    <tr>
                      <td>
                        <%= student.name %>
                      </td>
                      <td>
                        <%if student.type_id.present? && student.status == "Enrolled" %>
                          <%= Type.find(student.type_id).name %>
                        <% end %>
                      </td>
                      <td>
                        <button class="mb-1 btn btn-success" type="button"><%= student.status%></button>
                      </td>
                      <td>Â£<%= student.type.fee %></td>
                      <td>
                        <div class="btn-group">
                          <button class="btn btn-primary" type="button"><span class="fa fa-cog"></span></button>
                          <button class="btn dropdown-toggle btn-primary" type="button" data-toggle="dropdown">
                          <span class="sr-only">primary</span>
                          </button>
                          <div class="dropdown-menu animated " role="menu">
                            <%= link_to 'View',student_path(student.id),class: "dropdown-item"%>
                            <%= link_to 'Edit',edit_student_path(student.id),class: "dropdown-item"%>
                            <%= hidden_field_tag :d_student, student.id%>
                            <a href="JavaScript:void(0);" class= "dropdown-item swal-demo7">Delete</a>
                          </div>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <%= render '/layouts/footer'%>
</div>
<script src="/assets/theme_js/jquery-slimscroll/jquery.slimscroll.js"></script>
<script src="/assets/theme_js/datatables.net/jquery.dataTables.js"></script>
<script src="/assets/theme_js/datatables.net-bs4/dataTables.bootstrap4.js"></script>
<script src="/assets/theme_js/datatables.net-buttons/dataTables.buttons.js"></script>
<script src="/assets/theme_js/datatables.net-buttons-bs/buttons.bootstrap.js"></script>
<script src="/assets/theme_js/datatables.net-buttons/buttons.colVis.js"></script>
<script src="/assets/theme_js/datatables.net-buttons/buttons.flash.js"></script>
<script src="/assets/theme_js/datatables.net-buttons/buttons.html5.js"></script>
<script src="/assets/theme_js/datatables.net-buttons/buttons.print.js"></script>
<script src="/assets/theme_js/datatables.net-keytable/dataTables.keyTable.js"></script>
<script src="/assets/theme_js/datatables.net-responsive/dataTables.responsive.js"></script>
<script src="/assets/theme_js/datatables.net-responsive-bs/responsive.bootstrap.js"></script>
<script src="/assets/theme_js/sweetalert/sweetalert.min.js"></script>
<!-- Add Student Modal-->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="myModalLabel">Add New Student</h4>
        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form class="form-horizontal">
          <fieldset>
            <div class="form-group row">
              <label class="col-xl-3 col-form-label">First Name</label>
              <div class="col-xl-8">
                <input class="form-control" type="text" placeholder="First Name">
              </div>
            </div>
          </fieldset>
          <fieldset>
            <div class="form-group row">
              <label class="col-xl-3 col-form-label">Last Name</label>
              <div class="col-xl-8">
                <input class="form-control" type="text" placeholder="Last Name">
              </div>
            </div>
          </fieldset>
          <fieldset>
            <div class="form-group row">
              <label class="col-xl-3 col-form-label">D.O.B</label>
              <div class="col-xl-8">
                <input class="form-control" type="date" placeholder="D.O.B">
              </div>
            </div>
          </fieldset>
          <fieldset>
            <div class="form-group row">
              <label class="col-xl-3 col-form-label">Gender</label>
              <div class="col-xl-8">
                <select class="custom-select custom-select-md">
                  <option selected="">Select Gender</option>
                  <option value="1">Male</option>
                  <option value="2">Female</option>
                </select>
              </div>
            </div>
          </fieldset>
          <fieldset>
            <div class="form-group row">
              <label class="col-xl-3 col-form-label"></label>
              <div class="col-xl-8">
                <button class="btn btn-labeled btn-success mb-2" type="button" id= "swal-demo5">
                <span class="btn-label"><i class="fa fa-plus" ></i></span>Add Another Student
                </button>
              </div>
            </div>
          </fieldset>
          <!-- This section will only show once they have clicked the Add Another Student button. Admin fills in the form and if they need to add another student they will click on that button and this section will show added students. Students will be saved once clicked on save -->
          <fieldset>
            <div class="form-group row">
              <label class="col-xl-3 col-form-label">Students</label>
              <div class="col-xl-8">
                <b>Waqas Ahmad, Test Student</b>
                <p> You must click Save to save the Students</p>
              </div>
            </div>
          </fieldset>
        </form>
      </div>
      <div class="modal-footer card-footer">
        <button class="btn btn-danger" type="button" data-dismiss="modal">Close</button>
        <button class="btn btn-primary" type="button">Save</button>
      </div>
    </div>
  </div>
</div>
<!-- Email Modal-->
<div class="modal fade" id="emailModal" tabindex="-1" role="dialog" aria-labelledby="emailModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="emailModalLabel">Send Email</h4>
        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form class="form-horizontal">
          <fieldset>
            <div class="form-group row">
              <label class="col-xl-3 col-form-label">Subject</label>
              <div class="col-xl-8">
                <input class="form-control" type="text" placeholder="Subject">
              </div>
            </div>
          </fieldset>
          <fieldset>
            <div class="form-group row">
              <label class="col-xl-3 col-form-label">Message</label>
              <div class="col-xl-8">
                <textarea class="form-control" rows="5"></textarea>
              </div>
            </div>
          </fieldset>
          <fieldset>
            <div class="form-group row">
              <label class="col-xl-3 col-form-label"><em class="fa fa-info-circle"></em></label>
              <div class="col-xl-8">
                <p> An email will be sent to the parents of the students in this classroom.</p>
              </div>
            </div>
          </fieldset>
        </form>
      </div>
      <div class="modal-footer card-footer">
        <button class="btn btn-danger" type="button" data-dismiss="modal">Close</button>
        <button class="btn btn-primary" type="button">Send</button>
      </div>
    </div>
  </div>
</div>
<script src="/assets/theme_js/js/app.js"></script>
