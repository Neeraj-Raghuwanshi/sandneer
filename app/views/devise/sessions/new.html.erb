<div class="wrapper">
  <div class="block-center mt-4 wd-xl">
    <!-- START card-->
    <div class="card card-flat">
      <div class="card-header text-center bg-dark">
        <a href="#">
        <!-- <img class="block-center rounded" src="/assets/logo.png" alt="Image"> -->
        <h4><%= APP_CONFIG['name']%></h4>
        </a>
      </div>
      <div class="card-body">
        <p class="text-center py-2">SIGN IN TO CONTINUE.</p>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name),html: {class: "mb-3", id:"loginForm"}) do |f| %>
          <div class="form-group">
            <div class="input-group with-focus">
              <%= f.text_field :login, autofocus: true, autocomplete: "email", class: "form-control border-right-0",id: "exampleInputEmail1",placeholder: "Enter Username" %>
              <div class="input-group-append">
                <span class="input-group-text text-muted bg-transparent border-left-0">
                <em class="fa fa-envelope"></em>
                </span>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="input-group with-focus">
              <%= f.password_field :password, autocomplete: "off",class: "form-control border-right-0",id: "exampleInputPassword1",placeholder: "Password" %>
              <div class="input-group-append">
                <span class="input-group-text text-muted bg-transparent border-left-0">
                <em class="fa fa-lock"></em>
                </span>
              </div>
            </div>
          </div>
          <div class="clearfix">
            <div class="checkbox c-checkbox float-left mt-0">
              <label>
                <% if devise_mapping.rememberable? -%>
                  <%= f.check_box :remember_me,class: "fa fa-check" %>
                <% end -%>
              <span class="fa fa-check"></span> Remember Me
              </label>
            </div>
            <div class="float-right">
              <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                <%= link_to "Forgot your password?", new_password_path(resource_name),class: "text-muted" %><br />
              <% end -%>
            </div>
          </div>
          <%= f.submit "Log in",class: "btn btn-block btn-primary mt-3" %>
        <%end %>
        <!-- <p class="pt-3 text-center">Need to Signup?</p> -->
        <%#= link_to "Register Now",new_user_registration_path,class: "btn btn-block btn-secondary" %>
      </div>
    </div>
    <!-- END card-->
    <div class="p-3 text-center">
      <span class="mr-2">&copy;</span>
      <span>2018</span>
      <span class="mr-2">-</span>
      <span>E-Maktab</span>
      <br>
      <span> Admin </span>
    </div>
  </div>
</div>
